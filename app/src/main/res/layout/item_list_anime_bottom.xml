<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_base"
    android:layout_marginTop="@dimen/margin_base"
    android:layout_marginBottom="@dimen/menu_height_and_base_margin"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewStandart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_base"
                    app:cardCornerRadius="@dimen/corner_radius_infinity"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="W, 1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/iv_anime_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txt_anime_title"
                    style="@style/TextLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_base"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toTopOf="parent" />

                <GridLayout
                    android:id="@+id/gl_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="@dimen/margin_base"
                    android:layout_marginTop="@dimen/margin_half"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView"
                    app:layout_constraintTop_toBottomOf="@id/txt_anime_title">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="24dp"
                        android:src="@drawable/star" />

                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/custom_wave_divider"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="@dimen/element_base_size"
                    android:layout_height="@dimen/element_base_size"
                    android:layout_weight="1"
                    android:padding="@dimen/button_inner_padding_more"
                    android:src="@drawable/minus"
                    app:tint="?main_accent_color" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_current_episode"
                    style="@style/CardViewButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/element_base_size"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/txt_current_episode"
                        style="@style/TextSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_base"
                        android:gravity="center_vertical|start" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="@dimen/element_base_size"
                    android:layout_height="@dimen/element_base_size"
                    android:layout_weight="1"
                    android:padding="@dimen/button_inner_padding_more"
                    android:src="@drawable/plus"
                    app:tint="?main_accent_color" />


            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>