<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="my_indicator_style" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?main_accent_color</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="TextLarge" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/inter_extra_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMid" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="BaseEditText" parent="TextSmall">
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColorHint">@color/dark</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandleLeft">@drawable/zero_pixels_transparent</item>
        <item name="android:textSelectHandleRight">@drawable/zero_pixels_transparent</item>
        <item name="android:textSelectHandle">@drawable/zero_pixels_transparent</item>
    </style>

    <style name="CardViewStandart" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/base_card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CardViewButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_infinity</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?main_accent_color</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/menu_background</item>
        <item name="itemActiveIndicatorStyle">@style/my_indicator_style</item>
        <item name="itemIconSize">@dimen/menu_icon_size</item>
        <item name="itemIconTint">@color/nav_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="MarkStar">
        <item name="android:layout_width">@dimen/item_list_star_size_half</item>
        <item name="android:src">@drawable/star_half</item>
    </style>

    <style name="MarkStarFirstHalf" parent="MarkStar" />

    <style name="MarkStarSecondHalf" parent="MarkStar">
        <item name="android:layout_width">@dimen/item_list_star_size_half</item>
        <item name="android:rotationY">180</item>
        <item name="android:src">@drawable/star_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
    </style>
</resources>